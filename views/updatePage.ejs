<%- include('./components/header') %>
<title><%= title %></title>

<form action="/update" method="post">
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab tab1">Update</label>
            <input id="tab-2" type="radio" name="tab" class="sign-in" checked><label for="tab-2" class="tab"><a href="/create">Create</a></label>
            <input id="tab-3" type="radio" name="tab" class="sign-in" checked><label for="tab-3" class="tab"><a href="/read">Read</a></label>
            <input id="tab-4" type="radio" name="tab" class="sign-in" checked><label for="tab-4" class="tab"><a href="/delete">Delete</a></label>
            <div class="login-form">
                <div class="sign-in-htm" style="margin-top: -30px;">
                    <div class="group">
                        <label for="id" class="label">Id for update</label>
                        <input id="id" type="text" class="input" name="_id">
                    </div>
                    <div class="group">
                        <label for="email" class="label">Email for update</label>
                        <input id="email" type="text" class="input" name="email">
                    </div>
                    <div class="group" style="margin-top: 25px;">
                        <label for="user" class="label">Name</label>
                        <input id="user" type="text" class="input" name="name">
                    </div>
                    <div class="group">
                        <input type="radio" id="male" name="gender" value="true">
                        <label for="male">Male</label>

                        <input type="radio" id="female" name="gender" value="false">
                        <label for="female">Female</label>
                    </div>
                    <div class="group" style="margin-top: -20px;">
                        <input type="submit" class="button" value="Update User">
                    </div>
                </div>
            </div>
            <h4 style="color:mediumspringgreen; margin: 0 auto; margin-top: 30px; width: max-content;"><%= message ? message : "" %></h4>
            <h4 style="color: brown; margin: 0 auto; margin-top: 30px;width: max-content;"><%= errorMessage ? errorMessage : "" %></h4>
        </div>
    </div>
</form>
<%- include('./components/footer') %>