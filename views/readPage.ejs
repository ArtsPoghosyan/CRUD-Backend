<%- include('./components/header') %>
<title><%= title %></title>

<form action="/read" method="post">
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab tab1">Read</label>
            <input id="tab-2" type="radio" name="tab" class="sign-in" checked><label for="tab-2" class="tab"><a href="/create">Create</a></label>
            <input id="tab-3" type="radio" name="tab" class="sign-in" checked><label for="tab-3" class="tab"><a href="/update">Update</a></label>
            <input id="tab-4" type="radio" name="tab" class="sign-in" checked><label for="tab-4" class="tab"><a href="/delete">Delete</a></label>
            <div class="login-form">
                <div class="sign-in-htm">
                    <div class="group">
                        <label for="id" class="label">Id for read</label>
                        <input id="id" type="text" class="input" name="_id">
                    </div>
                    <div class="group">
                        <label for="email" class="label">Email for read</label>
                        <input id="email" type="text" class="input" name="email">
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Read User">
                    </div>
                </div>
            </div>
            <h4 style="color:white; margin: 5px auto; width: max-content; margin-top: -25px;"><%= user ? "NAME - " + user.name : "" %></h3>
            <h4 style="color:white; margin: 5px auto; width: max-content;"><%= user ? "EMAIL - " + user.email : "" %></h3>
            <h4 style="color:white; margin: 5px auto; width: max-content;"><%= user ? user.gender ? "GENDER - male" : "GENDER - female" : "" %></h3>
            <h4 style="color: brown; margin: 0 auto; margin-top:20px; width: max-content;"><%= errorMessage ? errorMessage : "" %></h4>
        </div>
    </div>
</form>
<%- include('./components/footer') %>